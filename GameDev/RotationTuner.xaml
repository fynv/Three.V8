<UserControl x:Class="GameDev.RotationTuner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameDev"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <local:AngleTuner x:Name="tuner_x" Margin="5" ValueChanged="tuner_ValueChanged"></local:AngleTuner>
        <local:AngleTuner x:Name="tuner_y" Margin="5" ValueChanged="tuner_ValueChanged"></local:AngleTuner>
        <local:AngleTuner x:Name="tuner_z" Margin="5" ValueChanged="tuner_ValueChanged"></local:AngleTuner>
    </StackPanel>
</UserControl>
