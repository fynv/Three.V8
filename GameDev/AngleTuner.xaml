<UserControl x:Class="GameDev.AngleTuner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameDev"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="text" Width="40" LostFocus="text_LostFocus" KeyDown="text_KeyDown">0.0</TextBox>
        <Slider x:Name="slider" Minimum="-180" Maximum="180" Value="0" Width="80" ValueChanged="Slider_ValueChanged"/>
    </StackPanel>
</UserControl>
