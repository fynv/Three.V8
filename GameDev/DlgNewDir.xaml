<Window x:Class="GameDev.DlgNewDir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameDev"
        mc:Ignorable="d"
        Title="New Directory" Height="150" Width="250" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <StackPanel HorizontalAlignment="Right" DockPanel.Dock="Bottom" Orientation="Horizontal">
            <Button x:Name="btn_ok" Margin="5" Padding="5" IsDefault="True" Click="btn_ok_Click">Ok</Button>
            <Button x:Name="btn_cancel" Margin="5" Padding="5" IsCancel="True">Cancel</Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Directory name:</TextBlock>
            <TextBox x:Name="text_filename" Margin="5" Width="200" Text="new_folder"></TextBox>
        </StackPanel>
    </DockPanel>
</Window>
