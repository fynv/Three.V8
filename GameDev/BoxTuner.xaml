<UserControl x:Class="GameDev.BoxTuner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameDev"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="Box Tuning">
        <StackPanel x:Name="stack">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="size:" VerticalAlignment="Center"/>
                <local:NumberTuner x:Name="tuner_width" Margin="5" ValueChanged="tuner_size_ValueChanged"></local:NumberTuner>
                <local:NumberTuner x:Name="tuner_height" Margin="5" ValueChanged="tuner_size_ValueChanged"></local:NumberTuner>
                <local:NumberTuner x:Name="tuner_depth" Margin="5" ValueChanged="tuner_size_ValueChanged"></local:NumberTuner>
                <CheckBox x:Name="chk_is_building" VerticalAlignment="Center" Content="is building" Checked="chk_is_building_Checked" Unchecked="chk_is_building_Checked"/>
            </StackPanel>
        </StackPanel>

    </GroupBox>
</UserControl>
