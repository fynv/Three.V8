<UserControl x:Class="GameDev.HemisphereSkyTuner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameDev"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="Hemisphere Sky Tuning">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Sky Color:" VerticalAlignment="Center"/>
                <local:ColorTuner x:Name="tuner_sky_color" Margin="5" ValueChanged="tuner_sky_color_ValueChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Ground Color:" VerticalAlignment="Center"/>
                <local:ColorTuner x:Name="tuner_ground_color" Margin="5" ValueChanged="tuner_ground_color_ValueChanged"/>
            </StackPanel>
        </StackPanel>
            
    </GroupBox>
</UserControl>
