<UserControl x:Class="GameDev.EnvLightTuner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameDev"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="Environment Light Tuning">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Type:" VerticalAlignment="Center"/>
                <ComboBox x:Name="lst_types" Width="100" Margin="5" SelectionChanged="lst_types_SelectionChanged">
                    <ComboBoxItem Tag="uniform">Uniform</ComboBoxItem>
                    <ComboBoxItem Tag="hemisphere" IsSelected="True">Hemisphere</ComboBoxItem>
                    <ComboBoxItem Tag="cube">Cube</ComboBoxItem>
                </ComboBox>
                <CheckBox x:Name="chk_dynamic" VerticalAlignment="Center" Content="Dynamic map" Checked="chk_dynamic_Checked" Unchecked="chk_dynamic_Checked" />
            </StackPanel>
            <StackPanel x:Name="property_area"></StackPanel>
        </StackPanel>
    </GroupBox>
</UserControl>
