<UserControl x:Class="GameDev.ScaleTuner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameDev"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal">
        <Button x:Name="btn_decr" Click="btn_decr_Click">⏴</Button>
        <TextBox x:Name="text_x" Width="50" LostFocus="text_x_LostFocus" KeyDown="text_x_KeyDown">1.0</TextBox>
        <TextBox x:Name="text_y" Width="50" LostFocus="text_y_LostFocus" KeyDown="text_y_KeyDown">1.0</TextBox>
        <TextBox x:Name="text_z" Width="50" LostFocus="text_z_LostFocus" KeyDown="text_z_KeyDown">1.0</TextBox>
        <Button x:Name="btn_incr" Click="btn_incr_Click">⏵</Button>
    </StackPanel>
</UserControl>
