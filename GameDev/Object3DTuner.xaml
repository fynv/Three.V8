<UserControl x:Class="GameDev.Object3DTuner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameDev"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center">Name:</TextBlock>
            <TextBox x:Name="text_name" Width="150" Margin="5" LostFocus="text_name_LostFocus" KeyDown="text_name_KeyDown"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center">Position:</TextBlock>
            <local:Vec3Tuner x:Name="tuner_pos" ValueChanged="tuner_pos_ValueChanged"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <TextBlock VerticalAlignment="Center">Rotation:</TextBlock>
            <local:RotationTuner x:Name="tuner_rot" ValueChanged="tuner_rot_ValueChanged"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center">Scale:</TextBlock>
            <local:ScaleTuner x:Name="tuner_scale" Margin="5" ValueChanged="tuner_scale_ValueChanged"/>
        </StackPanel>

    </StackPanel>
</UserControl>
