<UserControl x:Class="GameDev.BackgroundSceneTuner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameDev"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="Background Scene Tuning">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Scene Path:</TextBlock>
                <TextBox x:Name="scene_path" Width="300" Margin="5"  LostFocus="text_LostFocus" KeyDown="text_KeyDown"/>
                <Button x:Name="btn_browse" VerticalAlignment="Bottom" Content="Browse" Margin="5" Padding="5" Click="btn_browse_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Near:" VerticalAlignment="Center"/>
                <local:NumberTuner x:Name="tuner_near" Margin="5" ValueChanged="tuner_near_ValueChanged"/>
                <TextBlock Text="Far:" VerticalAlignment="Center"/>
                <local:NumberTuner x:Name="tuner_far" Margin="5" ValueChanged="tuner_far_ValueChanged"/>

            </StackPanel>

        </StackPanel>
    </GroupBox>
</UserControl>
