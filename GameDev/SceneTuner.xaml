<UserControl x:Class="GameDev.SceneTuner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameDev"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="Scene Tuning">
        <StackPanel>
            <GroupBox Header="Lightmaps">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Iterations:" VerticalAlignment="Center"/>
                    <local:NumberTuner x:Name="tuner_iterations" Margin="5" VerticalAlignment="Center"/>
                    <Button x:Name="btn_bake" Margin="5" Padding="5" Click="btn_bake_Click">Bake</Button>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </GroupBox>
</UserControl>
