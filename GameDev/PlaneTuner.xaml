<UserControl x:Class="GameDev.PlaneTuner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameDev"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="Plane Tuning">
        <StackPanel x:Name="stack">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="size:" VerticalAlignment="Center"/>
                <local:NumberTuner x:Name="tuner_width" Margin="5" ValueChanged="tuner_size_ValueChanged"></local:NumberTuner>
                <local:NumberTuner x:Name="tuner_height" Margin="5" ValueChanged="tuner_size_ValueChanged"></local:NumberTuner>
            </StackPanel>            
        </StackPanel>
    </GroupBox>
</UserControl>
