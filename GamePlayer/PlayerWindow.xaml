<Window x:Class="GamePlayer.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GamePlayer"
        mc:Ignorable="d"
        Title="PlayerWindow" Width="800" Height="700" WindowStartupLocation="CenterScreen"  Closing="MainWindow_Closing">
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="0"/>
        </Grid.RowDefinitions>

        <WindowsFormsHost x:Name="wf_host" Margin="10" Grid.Row="0"/>
        <GridSplitter Grid.Row="1" HorizontalAlignment="Stretch"/>
        <TabControl x:Name="tab_console" Grid.Row="2">
            <TabItem Header="Console">
                <ScrollViewer x:Name="console_scroll">
                    <StackPanel x:Name="console"></StackPanel>
                    <ScrollViewer.ContextMenu>
                        <ContextMenu>
                            <MenuItem x:Name="menu_clear_console" Header="Clear" Click="menu_clear_console_Click"/>
                        </ContextMenu>
                    </ScrollViewer.ContextMenu>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        

    </Grid>
</Window>
